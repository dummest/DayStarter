<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DayStarter" parent="Theme.MaterialComponents.Light">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">#00FF38</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">#D903FF</item>
        <item name="colorOnSecondary">@color/white</item>

        <!--mcv 색상 <item name="colorAccent">@color/invisible</item>-->
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item><!-- light mode only(make text black)-->

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="titleTextColor">?android:attr/textColor</item>
        <item name="colorControlNormal">@color/gray</item>

        <item name="android:timePickerStyle">@style/ScheduleTimePickerTheme</item>
        <item name="android:windowBackground">@color/light_gray</item>
    </style>

    <!-- ActionBar background change to black or white(by -->
    <style name="MyActionBar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:backgroundTint">?android:attr/colorSecondary</item>
    </style>

    <!--drawer theme-->
    <style name="DrawerTheme" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">?android:attr/statusBarColor</item>

    </style>

    <!-- timepicker spinner theme -->
    <style name="ScheduleTimePickerTheme" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <!--delete actionbar title-->
    <style name="Theme.DayStarter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DayStarter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DayStarter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>