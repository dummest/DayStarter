<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DayStarter" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/smoky_blue</item>
        <item name="colorPrimaryVariant">#FF8A80</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#81C784</item>
        <item name="colorSecondaryVariant">#D903FF</item>
        <item name="colorOnSecondary">@color/white</item>

        <!--mcv 색상 <item name="colorAccent">@color/invisible</item>-->
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item><!-- light mode only(make text black)-->

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="titleTextColor">?android:attr/textColor</item>
        <item name="colorControlNormal">@color/gray</item>

        <item name="android:timePickerStyle">@style/ScheduleTimePickerTheme</item>
        <item name="android:windowBackground">@color/light_gray</item>

        <item name="appBarLayoutStyle">@style/Theme.DayStarter.AppBar</item>
        <item name="actionBarStyle">@style/Theme.DayStarter.ActionBar</item>
    </style>

    <!--drawer theme-->
    <style name="DrawerTheme" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">?android:attr/statusBarColor</item>

    </style>

    <!-- timepicker spinner theme -->
    <style name="ScheduleTimePickerTheme" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <!--delete actionbar title-->
    <style name="Theme.DayStarter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DayStarter.ActionBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.DayStarter.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.DayStarter.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
</resources>