<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DayStarter" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_gray</item>
        <item name="android:windowBackground">@color/light_gray</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>

        <!--mcv, fab 색상 <item name="colorAccent">@color/invisible</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">?android:attr/textColor</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="colorControlNormal">@color/gray</item>

        <item name="android:timePickerStyle">@style/ScheduleTimePickerTheme</item>
    </style>

    <style name="ScheduleTimePickerTheme" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="Theme.DayStarter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DayStarter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DayStarter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>