<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.groupSchedule.WritingGroupScheduleActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/title_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="20"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:textSize="20sp"
                        android:text ="시작"
                        />
                    <TextView
                        android:text="Date"
                        android:id="@+id/before_date_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_margin="3dp"
                        android:textSize="20sp"
                        android:gravity="end"
                        />
                    <TextView
                        android:text="Time"
                        android:id="@+id/before_time_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:layout_margin="3dp"
                        android:textSize="20sp"
                        android:gravity="end"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="20">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:text="종료"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:text="Date"
                        android:id="@+id/after_date_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_margin="3dp"
                        android:gravity="end"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:text="Time"
                        android:id="@+id/after_time_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:layout_margin="3dp"
                        android:gravity="end"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/contents_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="내용"
                android:lines="20"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:layout_gravity="bottom"
        android:backgroundTint="?android:attr/statusBarColor">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/invisible"
            android:text="취소"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            app:cornerRadius="@dimen/round_button_radius"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/invisible"
            android:text="저장"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            app:cornerRadius="@dimen/round_button_radius"
            />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>